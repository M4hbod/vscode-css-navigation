{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"outDir": "out",
		"rootDir": "src",
		"lib": ["esnext"],
		"sourceMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"declaration": true
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
